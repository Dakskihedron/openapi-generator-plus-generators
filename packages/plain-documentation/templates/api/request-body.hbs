{{!--
    Renders the request-body section of an operation.
--}}

{{#with requestBody}}
    <div class="request">
        <h5>Request</h5>
            {{{md description}}}

            {{#if schema}}
            {{#if schema.anonymous}}
            {{>api/model model=schema anchor="/schemas" hideName="true"}}
            {{else}}
            <p class="meta">{{>model/datatype anchor='/schemas'}}</p>
            {{/if}}
            {{else}}
            <p class="meta"><em>Undocumented</em></p>
            {{/if}}

            {{#hasExamples .}}
                <p><a href="#" class="example-trigger">Examples</a></p>
                <div class="examples">
                {{#each contents}}
                    {{#each examples}}
                        {{#if name}}
                            <p><strong>{{name}}</strong></p>
                        {{/if}}
<pre>
{{valuePretty}}
</pre>
                        {{#if mediaType}}
                            <p><span class="type">{{mediaType.mediaType}}</span></p>
                        {{/if}}
                    {{/each}}
                {{/each}}
                </div>
            {{/hasExamples}}

            {{#if ../consumes}}
            <p>{{#each ../consumes}}<span class="type">{{mediaType}}</span> {{/each}}</p>
            {{/if}}
    </div>
{{/with}}
